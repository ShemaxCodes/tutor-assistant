<h2> Welcome, <%= @current_user.username %> !</h2><br>
<h3> This is your Assignment Dashboard </h3><br><br>
<hr><br><br>


<h1><%= @assignment.title %></h1><br><br>

<%= link_to "Open Assignment", url_for(@assignment.file) %><br><br>

<%= @assignment.instructions %><br><br>
<h4> Due Date: </h4>
<%= @assignment.due_date.in_time_zone('US/Eastern').strftime("%d/%m/%Y %I:%M %p") %>


<br>
<br>


<%= link_to "Edit Assignment", edit_assignment_path %><br>
<%= link_to "Delete Assignment", assignment_path(@assignment), :data => {:confirm => 'Are you sure?'}, :method => :delete %><br>
<br>

<%= link_to "Back", "history.back()" %>