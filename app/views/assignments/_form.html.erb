<%= form_for @assignment  do |f| %>

<%= f.label :title, "Name of Assignment:" %>
<%= f.text_field :title %>
<br>

<%= f.label :instructions, "Instructions:" %>
<%= f.text_area :instructions %>
<br>

<%= f.label :attachment, "Upload Assignment:" %>
<%= f.file_field :file %>
<br>

<%= f.label :due_date, "Due Date:" %>
<%= f.datetime_field :due_date %>
<br>

<%= f.label :score, "Score:" %>
<%= f.number_field :score %>
<br>

<%= f.label :user_ids, "Students:" %>
<%= f.collection_check_boxes(:user_ids, @students, :id, :first_name) %><br><br>

<%= f.submit "Create Assignment" %>
<% end %>