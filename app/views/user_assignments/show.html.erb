<h2> Welcome, <%= current_user.username %> !</h2><br>
<h3> This is your Student Dashboard </h3><br>

<div>
<h1><%= @user_assignment.title %></h1><br><br>
<%= link_to "Open Assignment", url_for(@user_assignment.file) %><br><br>

<h4> Due Date: </h4>
<%= @user_assignment.due_date.in_time_zone('US/Eastern') %>
<%= @user_assignment.due_date.in_time_zone('US/Eastern').strftime("%I:%M %p") %>
</div>

<br>
<br>

<%= form_for @user_assignment  do |f| %>

    <%= f.label :attachment, "Submit Completed Assignment:" %><br>
    <%= f.file_field :file %>
    <br><br>
<%= f.submit "Submit Assignment" %>

<% end %>
<br>
<%= link_to "Back", :back  %>